    if os.path.exists(logo_path):
        try:
            c.drawImage(
                ImageReader(logo_path),
                40,
                730,
                width=150,
                height=50,
                preserveAspectRatio=True,
                mask="auto",
            )
        except Exception:
            pass
    t = c.beginText(40, 680)
    t.setFont("Helvetica", 12)
    linhas = [
        "LOJA DE LATICÍNIOS - ORDEM DE SERVIÇO",
        "----------------------------------------------"
        "----------------------------------------------",
        f"OS Nº: {os_num}",
        f"Cliente: {nome}",
        f"CPF: {cpf}",
        f"Telefone: {telefone}",
        f"Descrição: {descricao}",
        f"Valor: R$ {valor:.2f}",
